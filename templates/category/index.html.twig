{% extends 'base.html.twig' %}

{% block title %}Category List{% endblock %}

{% block body %}
    <h1>Category List</h1>

    <a href="{{ path('category_add') }}" class="btn btn-primary mb-3">Add New Category</a>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                        <a href="{{ path('category_delete', {'id': category.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No categories found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_list') }}">‚Üê Back to Articles</a>
{% endblock %}
